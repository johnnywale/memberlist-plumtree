#!/bin/sh
#
# Pre-commit hook for memberlist-plumtree
# Runs cargo fmt and clippy checks before allowing commits
#

set -e

echo "Running pre-commit checks..."

# Check formatting
echo "Checking formatting with cargo fmt..."
if ! cargo fmt -- --check; then
    echo ""
    echo "❌ Formatting check failed!"
    echo "Run 'cargo fmt' to fix formatting issues."
    exit 1
fi
echo "✓ Formatting OK"

# Run clippy
echo "Running clippy..."
if ! cargo clippy --all-features --all-targets -- -D warnings 2>&1; then
    echo ""
    echo "❌ Clippy check failed!"
    echo "Fix the warnings above before committing."
    exit 1
fi
echo "✓ Clippy OK"

echo ""
echo "✅ All pre-commit checks passed!"
